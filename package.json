{
  "name": "internship-portal-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev -w vite_react_shadcn_ts",
    "dev:backend": "npm run dev -w backend",
    "build:frontend": "npm run build -w vite_react_shadcn_ts",
    "start": "npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
